{% extends 'front/base.html.twig' %}
{% block body %}
    <section id="catalogue">
        <div>
            <h4 class="pt-3 pb-5" style="font-size: 1.3em">DÃ©couvrez notre Catalogue</h4>
        </div>
<div class="container">
            <div class="row">
                {% for category in categories|reverse%}
                    <div class="col-md-4 col-sm-6 col-xs-12 mb-5">
                        <div class="card catalogue">
                            <div class="cover item">
                                <h6 class="h-catalogue">{{ category.title }}</h6>
                                <img src=" {{ category.image }}" alt="{{ category.title }}" class="card-img-top" height="225"  width="300" >
                                <div class="card-back">
                                    <a href="{{ path('app_catalogue_show', {'id': category.id}) }}" >{{ category.title }}</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}