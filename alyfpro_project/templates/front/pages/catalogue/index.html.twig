{% extends 'front/base.html.twig' %}
{% block body %}
    <section id="catalogue">
        <div>
            <h4 class="pt-2 pb-3">Catalogue</h4>
        </div>
<div class="container">
            <div class="row">
                {% for category in categories %}
                    <div class="col-md-4 col-sm-6 col-xs-12 mb-2"> {# Utilisez la classe "col-md-3" pour avoir 4 cartes par ligne sur un Ã©cran de taille moyenne (md) #}
                        <div class="card catalogue">
                            <div class="cover item">
                                <h6 class="h-catalogue">{{ category.title }}</h6>
                                <img src=" {{ category.image }}" alt="{{ category.title }}" class="card-img-top" height="300"  width="auto" >
                                <div class="card-back">
                                    <a href="{{ path('app_catalogue_show', {'id': category.id}) }}" >{{ category.title }}</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}