{% extends 'back/base.html.twig' %}

{% block body %}
    <div class="row">
        <div >
            <h3>Les modules récents</h3>
            <table class="table table-dark table-striped">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Date debut</th>
                    <th>Date fin</th>
                    <th>Durée</th>
                    <th>Lieu</th>
                    <th>Type</th>
                    <th>Formateur</th>
                </tr>
                </thead>
                <tbody>
                {% for module in modules %}
                    <tr>
                        <td>
                                {{ module.title }}
                        </td>
                        <td>
                            {{ module.startAt|date('Y-m-d') }}

                        </td>
                        <td>
                            {{ module.endAt|date('Y-m-d') }}

                        </td>
                        <td>
                            {{ module.duration }} Jour(s)

                        </td>
                        <td>
                            {{ module.location }}

                        </td>
                        <td>
                            {{ module.modality }}

                        </td>
                        <td>
                            <a class="main-link" href="{{ path('app_admin_user_show', {'id': module.user.id}) }}">

                            {{ module.user.lastName }} {{ module.user.firstName }}
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

