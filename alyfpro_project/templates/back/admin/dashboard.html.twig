                    <td>
                         <a class="main-link" href="{{ path('app_admin_user_show', {'id': user.id}) }}">
                        {{ user.lastName }} {{ user.firstName }}
                         </a>
                    </td>
                    <td>
                        {% for specialty in user.specialities %}
                            {{ specialty.title }}
                            {% if not loop.last %}, {% endif %}
                        {% endfor %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
